@layout MudBlazorLayout
@page "/profile"
@using PMS.UI.StaticDetails
@using MudBlazor
@* <h3>Register</h3> *@
<div class="wrapper">
    <CustomHeader />
    @* @if (!string.IsNullOrEmpty(Message))
    {
    <div class="alert alert-danger">
    @Message
    </div>
    } *@
    @if (IsLoading)
    {
        <div class="loading-overlay">
            @*  <div class="spinner"></div> *@
            <div id="preloader"></div>
        </div>
    }
    else
    {
        <div class="container py-4 h-100">
            <MudTHeadRow Class="d-flex justify-content-center align-items-center h-100 pt-5">
                <div class="col col-xl-12">
                    <MudItem xs="12">
                        <div class="form-container">
                            <EditForm Model="@_profileModel" OnValidSubmit="OnValidSubmit">
                                <MudGrid Class="gutters">
                                    <MudItem xl="3" lg="3" md="12" sm="12" xs="12">
                                        <MudCard Class="h-100">
                                            <MudCardContent>
                                                <MudImage Width="200" Height="220" Src="https://bootdey.com/img/Content/avatar/avatar7.png" Alt="Maxwell Admin" />
                                                <MudText Typo="Typo.h5" Class="pt-2 text-center"></MudText>
                                            </MudCardContent>
                                        </MudCard>
                                    </MudItem>
                                    <MudItem xl="9" lg="9" md="12" sm="12" xs="12">
                                        <MudCard Class="h-100">
                                            <MudCardContent>
                                                <MudGrid Class="gutters">
                                                    <MudItem xs="12">
                                                        <MudText Typo="Typo.h6" Class="mb-2 text-primary">Personal Details</MudText>
                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                                                        <MudTextField Label="First Name" HelperText="Max. 8 characters" @bind-Value="_profileModel.FirstName" For="@(() => _profileModel.FirstName)" Disabled="@(!IsEditMode)" />
                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                                                        <MudTextField Label="Last Name" HelperText="Max. 8 characters" @bind-Value="_profileModel.LastName" For="@(() => _profileModel.LastName)" Disabled="@(!IsEditMode)" />
                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                                                        <MudTextField Label="Email" HelperText="Max. 8 characters" @bind-Value="_profileModel.Email" For="@(() => _profileModel.Email)" Disabled="@(!IsEditMode)" />
                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                                                        <MudTextField Label="Phone Number" HelperText="Max. 8 characters" @bind-Value="_profileModel.PhoneNumber" For="@(() => _profileModel.PhoneNumber)" Disabled="@(!IsEditMode)" />
                                                    </MudItem>
                                                </MudGrid>
                                                <MudDivider Class="my-3" />
                                                <MudGrid Class="gutters">
                                                    <MudItem xs="12">
                                                        <MudText Typo="Typo.h6" Class="mt-3 mb-2 text-primary">Address</MudText>
                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                                                        <MudTextField @bind-Value="_profileModel.Address" Label="Street" Placeholder="Enter Street" Disabled="@(!IsEditMode)" />
                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">

                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">

                                                    </MudItem>
                                                    <MudItem xl="6" lg="6" md="6" sm="6" xs="12">

                                                    </MudItem>
                                                </MudGrid>
                                                <MudDivider Class="my-3" />
                                                <MudItem xs="12">
                                                    <div class="row">
                                                        @if (IsEditMode)
                                                        {
                                                            <div class="col-12 col-md-6 mb-2">
                                                                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary">Save</MudButton>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="col-12 col-md-6 mb-2">
                                                                <MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Warning" OnClick="ToggleEditMode">Edit</MudButton>
                                                            </div>
                                                        }
                                                        
                                                        <div class="col-12 col-md-6">
                                                            <MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Info" OnClick="PasswordReset">Update Password</MudButton>
                                                        </div>
                                                    </div>
                                                </MudItem>
                                            </MudCardContent>
                                        </MudCard>
                                    </MudItem>
                                </MudGrid>
                            </EditForm>
                        </div>
                    </MudItem>
                </div>
            </MudTHeadRow>
        </div>




    }

    <Footer />
</div>
