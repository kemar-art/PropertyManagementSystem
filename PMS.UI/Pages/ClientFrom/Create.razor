@layout EmptyLayout
@page "/create/"
@inject ISnackbar Snackbar
@using PMS.UI.StaticDetails
@* <h3>Create</h3> *@
@using MudBlazor
<div class="wrapper">
    <CustomHeader />

    @if (IsLoading)
    {
        <div class="loading-overlay">
            @*  <div class="spinner"></div> *@
            <div id="preloader"></div>
        </div>
    }
    else
    {
        <div class="content">
            <div class="form-container">
                <EditForm Model="@FormVM" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <MudGrid>
                        <MudItem xs="12">
                            <MudPaper Class="pa-4 lifted">
                                <!-- Step 1: Client Details -->
                                @if (currentStep == 1)
                                {
                                    <MudPaper Class="pa-4 mt-4 lifted">
                                        <MudText Typo="Typo.h6">CLIENT INFORMATION</MudText>
                                        <MudGrid>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="First Name" @bind-Value="FormVM.FirstName" For="@(() => FormVM.FirstName)" /> 
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Last Name" @bind-Value="FormVM.LastName" For="@(() => FormVM.LastName)" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Phone Number" @bind-Value="FormVM.PhoneNumber" For="@(() => FormVM.PhoneNumber)" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Email" @bind-Value="FormVM.Email" For="@(() => FormVM.Email)" />
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField T="string" Label="Address" @bind-Value="FormVM.Address" For="@(() => FormVM.Address)" />
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField T="string" Label="Instructions Issued By" @bind-Value="FormVM.InstructionsIssuedBy" For="@(() => FormVM.InstructionsIssuedBy)" />
                                            </MudItem>
                                        </MudGrid>
                                    </MudPaper>
                                }

                                <!-- Step 2: Property Details -->
                                @if (currentStep == 2)
                                {
                                    <MudPaper Class="pa-4 mt-4 lifted">
                                        <MudText Typo="Typo.h6">PROPERTY INFORMATION</MudText>
                                        <MudGrid>
                                            <MudItem xs="12">
                                                <MudText Align="Align.Center" Typo="Typo.subtitle1"><b>SERVICE(S) REQUIRED</b></MudText>
                                                <MudGrid>
                                                    @foreach (var item in ServiceRequestCheckBoxesVM)
                                                    {
                                                        <MudItem xs="12" sm="6">
                                                            <MudCheckBox  @bind-Value="item.IsChecked" Size="Size.Medium" Color="Color.Secondary" Label="@item.Title" />
                                                        </MudItem>
                                                    }
                                                </MudGrid>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudText Align="Align.Center" Typo="Typo.subtitle1"><b>TYPE OF PROPERTY:</b></MudText>
                                                <MudGrid>
                                                    @foreach (var item in TypeOfPropertyCheckBoxItemVM)
                                                    {
                                                        <MudItem xs="12" sm="6">
                                                            <MudCheckBox @bind-Value="item.IsChecked" Size="Size.Medium" Color="Color.Secondary" Label="@item.Title" />
                                                            <input type="hidden" value="@item.Id" />
                                                        </MudItem>
                                                    }
                                                </MudGrid>
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Volume" @bind-Value="FormVM.Volume" For="@(() => FormVM.Volume)" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Folio" @bind-Value="FormVM.Folio" For="@(() => FormVM.Folio)" />
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField T="string" Label="Strata/Deposit Plan" @bind-Value="FormVM.StrataPlan" For="@(() => FormVM.StrataPlan)" />
                                            </MudItem>
                                            <MudDivider />
                                            <MudItem xs="12">
                                                <MudText Align="Align.Center" Typo="Typo.subtitle1"><b>PURPOSE OF VALUATION:</b></MudText>
                                                <MudGrid>
                                                    @foreach (var item in PurposeOfEvaluationCheckBoxesVM)
                                                    {
                                                        <MudItem xs="12" sm="6">
                                                            <MudCheckBox @bind-Value="item.IsChecked" Size="Size.Medium" Color="Color.Secondary" Label="@item.Title" />
                                                            <input type="hidden" value="@item.Id" />
                                                        </MudItem>
                                                    }
                                                </MudGrid>
                                            </MudItem>
                                            <MudDivider />
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Mortgage Institution" @bind-Value="FormVM.MortgageInstitution" For="@(() => FormVM.MortgageInstitution)" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Other" @bind-Value="FormVM.Other" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudText Typo="Typo.subtitle1">Is The Key Available</MudText>
                                                <MudRadioGroup T="string" @bind-Value="FormVM.IsKeyAvailable" For="@(() => FormVM.IsKeyAvailable)">
                                                    <MudRadio Value="KeyAvailability.Yes">Yes</MudRadio>
                                                    <MudRadio Value="KeyAvailability.No">No</MudRadio>
                                                </MudRadioGroup>
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudSelect T="Guid" Label="Parish" @bind-Value="FormVM.RegionId">
                                                    <MudSelectItem T="Guid" Value="@Guid.Empty" Disabled>--Select Parish--</MudSelectItem>
                                                    @foreach (var region in Regions)
                                                    {
                                                        <MudSelectItem T="Guid" Value="@region.Id">@region.ParishName</MudSelectItem>
                                                    }
                                                </MudSelect>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField T="string" Label="Property Address" @bind-Value="FormVM.PropertyAddress" For="@(() => FormVM.PropertyAddress)" />
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField T="string" Label="Property Direction" @bind-Value="FormVM.PropertyDirection" TextArea="true" />
                                            </MudItem>
                                        </MudGrid>
                                    </MudPaper>
                                }

                                <!-- Step 3: Contact for Inspection -->
                                @if (currentStep == 3)
                                {
                                    <MudPaper Class="pa-4 mt-4 lifted">
                                        <MudText Typo="Typo.h6">CONTACT FOR INSPECTION</MudText>
                                        <MudGrid>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="First Name" @bind-Value="FormVM.SecondaryContactFirstName" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Last Name" @bind-Value="FormVM.SecondaryContactLastName" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Phone Number" @bind-Value="FormVM.SecondaryContactPhoneNumber" />
                                            </MudItem>
                                            <MudItem xs="6">
                                                <MudTextField T="string" Label="Email" @bind-Value="FormVM.SecondaryContactEmail" />
                                            </MudItem>
                                        </MudGrid>
                                    </MudPaper>
                                }

                                <!-- Navigation Buttons -->
                                <MudItem xs="12" class="mt-4">
                                    <div class="row">
                                        <div class="col">
                                            <MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Secondary" @onclick="PreviousStep" Disabled="@((currentStep == 1))">Back</MudButton>
                                        </div>


                                        @if (currentStep < 3)
                                        {
                                            <div class="col">
                                                <MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" @onclick="NextStep">Next</MudButton>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="col">
                                                <MudButton ButtonType="ButtonType.Submit" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary">Submit</MudButton>
                                            </div>

                                        }
                                    </div>
                                </MudItem>

                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </EditForm>
            </div>
        </div>
    }

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


    <Footer />
</div>
@* style="background-color: #f82249" *@